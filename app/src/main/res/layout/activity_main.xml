<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matrix_black"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvAppTitle"
            style="@style/MatrixTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/main_title"
            android:textSize="28sp" />

        <!-- Current Region Card -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/matrix_black_card"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/matrix_green"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/MatrixSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/current_region"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/statusIndicator"
                        style="@style/StatusIndicator" />

                    <TextView
                        android:id="@+id/tvCurrentRegion"
                        style="@style/MatrixText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/region_hk"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnRefreshRegion"
                        style="@style/MatrixButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/refresh" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDetectionMethod"
                    style="@style/MatrixText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/auto_detection"
                    android:textColor="@color/matrix_green_light"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Region Selection Card -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/matrix_black_card"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/matrix_green"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/MatrixSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/region_detection"
                    android:textSize="20sp" />

                <!-- Region Grid -->
                <GridLayout
                    android:id="@+id/regionGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:columnCount="2"
                    android:rowCount="6">

                    <Button
                        android:id="@+id/btnRegionUS"
                        style="@style/RegionButton"
                        android:text="@string/region_us" />

                    <Button
                        android:id="@+id/btnRegionSG"
                        style="@style/RegionButton"
                        android:text="@string/region_sg" />

                    <Button
                        android:id="@+id/btnRegionJP"
                        style="@style/RegionButton"
                        android:text="@string/region_jp" />

                    <Button
                        android:id="@+id/btnRegionHK"
                        style="@style/RegionButton"
                        android:text="@string/region_hk" />

                    <Button
                        android:id="@+id/btnRegionKR"
                        style="@style/RegionButton"
                        android:text="@string/region_kr" />

                    <Button
                        android:id="@+id/btnRegionDE"
                        style="@style/RegionButton"
                        android:text="@string/region_de" />

                    <Button
                        android:id="@+id/btnRegionSE"
                        style="@style/RegionButton"
                        android:text="@string/region_se" />

                    <Button
                        android:id="@+id/btnRegionNL"
                        style="@style/RegionButton"
                        android:text="@string/region_nl" />

                    <Button
                        android:id="@+id/btnRegionFI"
                        style="@style/RegionButton"
                        android:text="@string/region_fi" />

                    <Button
                        android:id="@+id/btnRegionGB"
                        style="@style/RegionButton"
                        android:text="@string/region_gb" />

                </GridLayout>

                <Button
                    android:id="@+id/btnAutoDetect"
                    style="@style/MatrixButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/auto_detection" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Actions Card -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/matrix_black_card"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/matrix_green"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/MatrixSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="快速操作"
                    android:textSize="20sp" />                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnConfig"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:text="@string/config_title" />

                    <Button
                        android:id="@+id/btnSubscription"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:text="@string/subscription_title" />

                    <Button
                        android:id="@+id/btnGenerator"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:text="生成器" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- System Status Card -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/matrix_black_card"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/matrix_green"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/MatrixSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/system_status"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/MatrixText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/connection_status"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvConnectionStatus"
                            style="@style/MatrixText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_online"
                            android:textColor="@color/status_online"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/MatrixText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/region_matching"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvRegionMatching"
                            style="@style/MatrixText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="启用"
                            android:textColor="@color/status_online"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
