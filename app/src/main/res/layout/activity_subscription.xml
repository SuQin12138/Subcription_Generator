<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matrix_black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            style="@style/MatrixTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/subscription_title"
            android:textSize="28sp" />

        <!-- 订阅链接卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/matrix_black_card"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/matrix_green"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/MatrixSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/subscription_url"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvSubscriptionUrl"
                    style="@style/MatrixText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/matrix_black_light"
                    android:padding="16dp"
                    android:text="生成中..."
                    android:textIsSelectable="true"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnGenerateSubscription"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="@string/generate_subscription" />

                    <Button
                        android:id="@+id/btnCopySubscription"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="@string/copy_subscription" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 客户端支持卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/matrix_black_card"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/matrix_green"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/MatrixSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/client_support"
                    android:textSize="20sp" />

                <!-- 客户端类型选择 -->
                <RadioGroup
                    android:id="@+id/rgClientType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <RadioButton
                        android:id="@+id/rbBase64"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Base64 (通用)"
                        android:textColor="@color/matrix_green"
                        android:buttonTint="@color/matrix_green" />

                    <RadioButton
                        android:id="@+id/rbClash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/client_clash"
                        android:textColor="@color/matrix_green"
                        android:buttonTint="@color/matrix_green" />

                    <RadioButton
                        android:id="@+id/rbSurge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/client_surge"
                        android:textColor="@color/matrix_green"
                        android:buttonTint="@color/matrix_green" />

                    <RadioButton
                        android:id="@+id/rbSingBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/client_singbox"
                        android:textColor="@color/matrix_green"
                        android:buttonTint="@color/matrix_green" />

                    <RadioButton
                        android:id="@+id/rbLoon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/client_loon"
                        android:textColor="@color/matrix_green"
                        android:buttonTint="@color/matrix_green" />

                    <RadioButton
                        android:id="@+id/rbQuantumult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/client_quantumult"
                        android:textColor="@color/matrix_green"
                        android:buttonTint="@color/matrix_green" />

                    <RadioButton
                        android:id="@+id/rbV2Ray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/client_v2ray"
                        android:textColor="@color/matrix_green"
                        android:buttonTint="@color/matrix_green" />

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 统计信息卡片 -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/matrix_black_card"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/matrix_green"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/MatrixSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订阅统计"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/MatrixText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="节点总数"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvNodeCount"
                            style="@style/MatrixText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/matrix_green_light"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/MatrixText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="地区覆盖"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvRegionCount"
                            style="@style/MatrixText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/matrix_green_light"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/MatrixText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="最后更新"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvLastUpdate"
                            style="@style/MatrixText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未知"
                            android:textColor="@color/matrix_green_light"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
