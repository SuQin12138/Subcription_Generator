<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matrix_black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/matrix_button_background"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="返回"
                android:tint="@color/matrix_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订阅生成器"
                android:textColor="@color/matrix_green"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:shadowColor="@color/matrix_green"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <!-- Configuration Card -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[ 基础配置 ]"
                    android:textColor="@color/matrix_green"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:shadowColor="@color/matrix_green"
                    android:shadowRadius="3" />

                <!-- UUID -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MatrixTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="UUID">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUuid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/matrix_green"
                        android:textColorHint="@color/matrix_green_dim" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Worker Domain -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MatrixTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Worker域名">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etWorkerDomain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:textColor="@color/matrix_green"
                        android:textColorHint="@color/matrix_green_dim" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Custom Path -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MatrixTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="自定义路径 (可选)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCustomPath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/matrix_green"
                        android:textColorHint="@color/matrix_green_dim" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Protocol Switches -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="协议选择"
                    android:textColor="@color/matrix_green"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchVless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VLESS"
                        android:textColor="@color/matrix_green"
                        android:layout_marginEnd="20dp"
                        app:thumbTint="@color/matrix_green"
                        app:trackTint="@color/matrix_green_dim" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchTrojan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trojan"
                        android:textColor="@color/matrix_green"
                        app:thumbTint="@color/matrix_green"
                        app:trackTint="@color/matrix_green_dim" />

                </LinearLayout>

                <!-- Trojan Password (hidden by default) -->
                <LinearLayout
                    android:id="@+id/layoutTrojanPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/MatrixTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Trojan密码 (留空使用UUID)">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTrojanPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@color/matrix_green"
                            android:textColorHint="@color/matrix_green_dim" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- TLS Switch -->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchNonTls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="禁用非TLS端口"
                    android:textColor="@color/matrix_green"
                    android:layout_marginBottom="16dp"
                    app:thumbTint="@color/matrix_green"
                    app:trackTint="@color/matrix_green_dim" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Custom IP Card -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[ 自定义优选IP ]"
                    android:textColor="@color/matrix_green"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:shadowColor="@color/matrix_green"
                    android:shadowRadius="3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/MatrixTextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginEnd="8dp"
                        android:hint="IP地址">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCustomIP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/matrix_green"
                            android:textColorHint="@color/matrix_green_dim" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/MatrixTextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="端口">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCustomPort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/matrix_green"
                            android:textColorHint="@color/matrix_green_dim" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/MatrixTextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="节点名称">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCustomName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/matrix_green"
                            android:textColorHint="@color/matrix_green_dim" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnAddCustomIP"
                        style="@style/MatrixButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加"
                        android:layout_gravity="bottom" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnClearCustomIPs"
                    style="@style/MatrixButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除所有自定义IP"
                    android:backgroundTint="@color/matrix_red" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Generate Button -->
        <Button
            android:id="@+id/btnGenerate"
            style="@style/MatrixButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="生成订阅"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Loading Progress -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/matrix_green" />

        <!-- Results Card -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="[ 生成结果 ]"
                        android:textColor="@color/matrix_green"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:shadowColor="@color/matrix_green"
                        android:shadowRadius="3" />

                    <TextView
                        android:id="@+id/tvLinkCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共 0 个节点"
                        android:textColor="@color/matrix_green_dim"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Links RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewLinks"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/matrix_card_background"
                    android:padding="8dp" />

                <!-- Base64 Content -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Base64订阅内容:"
                    android:textColor="@color/matrix_green"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvBase64Content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/matrix_card_background"
                    android:padding="8dp"
                    android:textColor="@color/matrix_green"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnCopyBase64"
                    style="@style/MatrixButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制Base64内容" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Client Buttons Card -->
        <androidx.cardview.widget.CardView
            style="@style/MatrixCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[ 客户端订阅 ]"
                    android:textColor="@color/matrix_green"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:shadowColor="@color/matrix_green"
                    android:shadowRadius="3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnClash"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Clash" />

                    <Button
                        android:id="@+id/btnSurge"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Surge" />

                    <Button
                        android:id="@+id/btnSingBox"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sing-Box" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnQuantumultX"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Quanx" />

                    <Button
                        android:id="@+id/btnV2ray"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="V2Ray" />

                    <Button
                        android:id="@+id/btnLoon"
                        style="@style/MatrixButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Loon" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
