<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules xmlns:android="http://schemas.android.com/apk/res/android">
    <cloud-backup>
        <!-- Include user preferences for cloud backup -->
        <include domain="sharedpref" path="."/>
        <!-- Exclude sensitive device-specific information -->
        <exclude domain="sharedpref" path="device_prefs.xml"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow transferring user preferences and app data -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <!-- Exclude temporary files -->
        <exclude domain="file" path="temp/"/>
    </device-transfer>
</data-extraction-rules>